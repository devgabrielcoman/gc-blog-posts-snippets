<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/contact_image_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            tools:background="#dedede"
            tools:src="@drawable/profile_icon"/>

    <TextView
            android:id="@+id/contact_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/contact_image_icon"
            app:layout_constraintTop_toTopOf="@id/contact_image_icon"
            app:layout_constraintEnd_toStartOf="@id/contact_follow_button"
            android:layout_marginStart="12dp"
            tools:text="John Doe"/>

    <TextView
            android:id="@+id/contact_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/contact_user_name"
            app:layout_constraintTop_toBottomOf="@+id/contact_user_name"
            app:layout_constraintEnd_toStartOf="@id/contact_follow_button"
            android:layout_marginTop="4dp"
            tools:text="+00 1234 56 7890"/>

    <Button
            android:id="@+id/contact_follow_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            tools:text="FOLLOW"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>